
<div class="body-view">

    <div class="side active">

    <div class="section">
        <i class="fas fa-blender side-icon"></i> 
        <div class="inner-section">
            
        <h2>Mes ingrédients</h2>

            
      
         <%= form_tag cocktails_path, method: :get do %>
            <%= select('get', :ig , Ingredient.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: 'select2', multiple: 'multiple', data: { placeholder: "Ajouter un ingrédient" }) %>

            <hr>
        
            <%= submit_tag "Recherche", class: "btn btn-primary" %>

        
        <% end %>
        </div>
    </div>



        
    </div>
    <!-- <div class="side-btn"> <i class="fas fa-chevron-left"></i> </div> -->

    <div class="view">
  
    <%= @sql %>
    <div class="result">
   
    <%= @result %>
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#add-cocktail-modal">
    ajouter
  </button>

    </div>

    <div class="grid">
    <%@cocktails.each do |item| %>
        <div class="flip-card ">
            <div class="flip-card-inner">
           
                <div class="flip-card-front">
               
                <a href="/cocktails/<%= item.id%>" class="cocktail-card"
                    style="background-image : linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url( <%= item.photo.present? ? item.photo : cl_image_path("vucs2ncsgrk6eo0iho2g") %>); background-size: cover;">
                    
                    <%= item.name %>
                    
                </a>
               
                </div>
            
                <div class="flip-card-back"
                style="background-image : linear-gradient(rgba(255,255,255,0.8), rgba(255,255,255,0.9)),  url( <%= item.photo.present? ? item.photo : cl_image_path("vucs2ncsgrk6eo0iho2g") %>); background-size: cover;">
                <div class="title"
                    style="background-image : linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)),  url( <%= item.photo.present? ? item.photo : cl_image_path("vucs2ncsgrk6eo0iho2g") %>); background-size: cover;">
                    <img class="icon-title" src=<%= item.photo.present? ? item.photo : cl_image_path("vucs2ncsgrk6eo0iho2g") %>>
                    <%= item.name %>
                </div>
                <div class="content">
                    <% item.doses.each do |dose| %>
                    <li>
                    <%= dose.description %>
                    </li>
                    <%end %>
                </div>
                <div class="end">
                    <%= link_to 'Voir le cocktail', cocktail_path(item), class: 'btn btn-primay' %>
                </div>
                </div>
            </div>
            </div>

            <% end %>
        </div>

       
    
       

    </div>
    
</div>


<div class="modal fade" id="add-cocktail-modal" tabindex="-1" role="dialog" aria-labelledby="add-cocktail-modal-Label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="add-cocktail-modal-Label">Description</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <%= simple_form_for(Cocktail.new) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description %>
        </div>
      
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>

      </div>
    </div>
  </div>
</div>


